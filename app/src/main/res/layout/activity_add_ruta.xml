<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip"
    android:orientation="vertical">

    <EditText
        android:id="@+id/nombreruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Nombre"
        android:inputType="text" />

    <EditText
        android:id="@+id/descripcionruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Descripcion"
        android:inputType="textLongMessage" />

    <EditText
        android:id="@+id/puebloruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Pueblo"
        android:inputType="text"
/>

    <EditText
        android:id="@+id/ciudadruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Ciudad"
        android:inputType="text"
/>

    <EditText
        android:id="@+id/como_llegar_ruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Como llegar"
        android:inputType="textLongMessage" />

    <EditText
        android:id="@+id/itemsruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Utensilios"
        android:inputType="textLongMessage" />

    <EditText
        android:id="@+id/latitudruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Latitud" />

    <EditText
        android:id="@+id/longitudruta"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="Longitud" />

    <ImageView
        android:layout_margin="20px"
        android:id="@+id/imagen_addruta"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnAddRuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/purple_700"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="AÃ±adir" />

    <ProgressBar
        android:id="@+id/barra_carga"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:visibility="gone"
        />


</LinearLayout>